<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<%= image_tag(@album.cover_url, class: 'col-md-6') if @album.cover.present? %>
		<div class="col-md-6">
			<h1><%= @album.title %></h1>
			<h4><%= @album.artist.name %> | <%= @album.genre.name %></h4>
			<div class="panel panel-success">
			  <div class="panel-heading">
			    <h3 class="panel-title">Track Listing</h3>
			  </div>
			  <div class="panel-body">
			    <ol>
			    	<% @album.songs.each do |song| %>
			    	<li><%= link_to song.name, song_path(song) %></li>
			    	<% end %>
			    </ol>
			  </div>
			</div>
			<%= link_to 'Edit This Album', edit_album_path(@album) %>
		</div>
	</div>
</div>

